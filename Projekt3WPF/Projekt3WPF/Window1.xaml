<Window x:Class="Projekt3WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt3WPF"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2*"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label x:Name="tytul" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center"/>
        <Image x:Name="zdj" Grid.Row="1" Grid.Column="0"   Height="200" Width="250"/>
        <TextBlock x:Name="opis" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" />
        <Button Grid.Column="0" Grid.Row="3" Content="&lt;" Width="60" Height="40" HorizontalAlignment="Left" Margin="20, 0, 0, 5" Click="Button_Click"/>
        <Button Grid.Column="0" Grid.Row="3" Content=">" Width="60" Height="40" HorizontalAlignment="Right" Margin="0,0,20,5" Click="Button_Click_1"/>
    </Grid>
</Window>
